program solve_basel;
const
	LOWERBOUND = 1;
	UPPERBOUND = 1000;
type
	double = real;
	int = integer;
var
	a,b,i,sumval : integer;

function sum ( b : int ) :  double;
	
	var
		i:integer;
		sum:double;
		term : array [LOWERBOUND..UPPERBOUND] of double;
	begin
		if b>=UPPERBOUND then
			b := UPPERBOUND ;
		i:=0;
		sum:=0.0;
		for i:= 1 to b do
		begin
			term[i] := 1.0/ 2.0;
			sum:=sum+i;
		end;
	end;


begin
	read(b);
	write ( sum(b) );
end
.
